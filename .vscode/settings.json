    //     "paths" : {
    //         "ProcessDir" : "/data/ATCA/Code/bin",
    //         "SEDFigDir" : ["/data/bin/AstroFig/*"],
    //         "pythonpacks" : ["/usr/lib/python3/dist-packages/*"]
    //     }
    // },
    "files.watcherExclude" : {
        "/data/ATCA/J**/**" : true,
        "/data/ATCA/data/**" : true,
        "/data/ATCA/processing/**" : true
    },
    "terminal.integrated.inheritEnv": true,
    "python.autoComplete.extraPaths": [
        "/usr/lib/python3/dist-packages/"
        ]
}